{% extends "dashboard.inc.twig" %}
{% block menu %}
    <div class="list-group">
        <a href="admin_dashboard.php" class="list-group-item">首頁</a>
        <a href="admin_dashboard.php?mode=userlist" class="list-group-item active">使用者列表</a>
    </div>
{% endblock %}
{% block content %}
<h4>編輯使用者</h4>
<form method="post" action="admin_dashboard.php?mode=saveedituser&uid={{ edit_user.no }}">
    <div class="mb-3">
        <label for="account" class="form-label">帳號</label>
        <input type="email" class="form-control" id="account" name="account" value="{{ edit_user.acc }}" readonly>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">新密碼</label>
        <input type="password" class="form-control" id="password" name="password" autocomplete="new-password">
    </div>
    <div class="mb-3">
        <label for="password_confirm" class="form-label">確認新密碼</label>
        <input type="password" class="form-control" id="password_confirm" name="password_confirm" autocomplete="new-password">
    </div>
    <div class="mb-3">
        <label for="role" class="form-label">身分別</label>
        <select class="form-control" id="role" name="role" required>
            <option value="normal-user" {% if edit_user.role == 'normal-user' %}selected{% endif %}>一般學員</option>
            <option value="adv-user" {% if edit_user.role == 'adv-user' %}selected{% endif %}>企業管理者</option>
            <option value="admin" {% if edit_user.role == 'admin' %}selected{% endif %}>系統管理員</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">儲存變更</button>
    <a href="admin_dashboard.php?mode=userlist" class="btn btn-secondary">取消</a>
</form>
{% endblock %}
