{% extends "dashboard.inc.twig" %}
{% block nav %}
    {% include "nav_admin.twig" %}
    {% endblock %}
{% block menu %}
	<div class="list-group">
		<a href="admin_dashboard.php" class="list-group-item">首頁</a>
		<a href="admin_dashboard.php?mode=inoutlist&name=Aaron" class="list-group-item active">打卡記錄列表</a>
		<a href="admin_dashboard.php?mode=createuser" class="list-group-item">創建使用者</a>
	</div>
{% endblock %}
{% block content %}
	<div class="row">
		<div class="card">
            <div class="card-title mt-3">
                <h3>學員打卡紀錄</h3>
            </div>
			<div class="card-body">
				<table class="table table-hover">
                    <thead>
                        <tr>
                            <th>學員</th>
                            <th>In/Out</th>
                            <th>時間</th>
                            <th>日期</th>
                            <th>IP位址</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for info in results %}
                            <tr>
                                <td>{{info.Name}}</td>
                                <td>{{attribute(info, 'In/Out')}}</td>
                                <td>{{info.Time}}</td>
                                <td>{{info.Date}}</td>
                                <td>{{info.IPAddress}}</td>
                            </tr>
                        {% endfor %}
                        
                    </tbody>
                </table>
                <div>
                    <div class="btn-group" role="group" aria-label="Basic outlined example" id="updatebtn">
                        <a href="admin_dashboard.php?mode=insertdata&name=Aaron" type="button" class="btn btn-outline-primary" id="insertdata">新增資料</a>
                         <a href="admin_dashboard.php?mode=deletedata&name=Aaron" type="button" class="btn btn-outline-primary" id="deletedata">刪除資料</a>
                    </div>
                </div>
			</div>
		</div>
	</div>
{% endblock %}
{% block scripts %}
<script>
const studentSelect = document.getElementById('studentSelect');
const searchBtn = document.getElementById('searchBtn');
const dateInput = document.getElementById('inoutDate');



// 初始化學生選單
fetch('student.php')
    .then(res => res.json())
    .then(studentList => {
        studentSelect.innerHTML = '<option selected disabled>選取學生</option>';
        studentList.forEach(student => {
            const option = document.createElement('option');
            option.value = student.name;
            option.textContent = student.name;
            studentSelect.appendChild(option);
        });
    });

// 整合搜尋按鈕邏輯
searchBtn.addEventListener('click', function () {
    const studentname = studentSelect.value.trim();
    const inoutDate = dateInput.value.trim();

    if (!studentname) {
        alert('請選取學生');
        return;
    }

    if (!inoutDate) {
        // ✅ 沒有輸入日期，導頁查詢所有資料
        const currentURL = new URL(window.location.href);
        currentURL.searchParams.set('name', studentname);
        currentURL.searchParams.set('mode', 'inoutlist');
        window.location.href = currentURL.toString();
        return;
    }

    // ✅ 有輸入日期，用 fetch 查詢資料後渲染
    fetch('inoutrecord.php', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            name: studentname,
            date: inoutDate
        })
    })
    .then(res => res.json())
    .then(data => {
        const tableBody = document.querySelector('.table tbody');
        const updatebtn = document.getElementById('updatebtn');
        tableBody.innerHTML = '';

        if (data.length === 0) {
            const tr = document.createElement('tr');
            tr.innerHTML = '<td colspan="5">查無資料</td>';
            tableBody.appendChild(tr);
            return;
        }

        data.forEach(row => {
            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td>${row.Name}</td>
                <td>${row["In/Out"]}</td>
                <td>${row.Time}</td>
                <td>${row.Date}</td>
                <td>${row.IPAddress}</td>
            `;
            updatebtn.innerHTML=`
                <a href="admin_dashboard.php?mode=insertdata&name=${row.Name}" type="button" class="btn btn-outline-primary" id="insertdata">新增資料</a>
                <a href="admin_dashboard.php?mode=deletedata&name=${row.Name}" type="button" class="btn btn-outline-primary" id="deletedata">刪除資料</a>
                
            `;
            tableBody.appendChild(tr);
        });
    });
});
</script>
{% endblock %}
